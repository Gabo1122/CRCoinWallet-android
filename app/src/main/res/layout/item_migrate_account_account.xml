<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/asset_item_radius"
        app:cardElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_asset"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/asset_gray_icon"
                android:adjustViewBounds="true"
                android:background="@drawable/shape_circle_dot_basic100"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/image_lock"
                android:layout_toEndOf="@+id/image_asset"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Alex Jeff" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_address"
                android:layout_width="match_parent"
                android:layout_toStartOf="@+id/image_lock"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@+id/text_name"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/image_asset"
                android:singleLine="true"
                android:textColor="@color/basic500"
                android:textSize="12sp"
                tools:text="pjoqwfjohf2wopjfqopqfoqfwlqfwjnfwkjnlqwfl" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:id="@+id/image_lock"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_draglock_22_disabled_400"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>